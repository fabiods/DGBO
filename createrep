#!/bin/bash
gamma=$1

sss=`tail -n 1 basrun.allene.$gamma.uniq.dat  | awk '{ for (i=4;i<=NF; i++) printf("%-8s",$i) }'`
eee=`tail -n 1 basrun.allene.$gamma.uniq.dat | awk '{ printf "%15.8f %15.8f ",$1,$2}'`

echo $sss $eee

sss=`tail -n 1 INC/basrun.allene.$gamma.uniq.dat   | awk '{ for (i=4;i<=NF; i++) printf("%-8s",$i) }'`
eee=`tail -n 1 INC/basrun.allene.$gamma.uniq.dat | awk '{ printf "%15.8f %15.8f ",$1,$2}'`

echo $sss $eee

sss=`sort -k 1 -g -r  INC/INC3/basrun.allene.$gamma.dat | tail -n 1 | awk '{ for (i=4;i<=NF; i++) printf("%-8s",$i) }'`
eee=`sort -k 1 -g -r  INC/INC3/basrun.allene.$gamma.dat | tail -n 1 | awk '{ printf "%15.8f %15.8f ",$1,$2}'`

echo $sss $eee

